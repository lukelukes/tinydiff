{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",

  "singleQuote": true,
  "trailingComma": "none",

  "experimentalSortImports": {
    "sortOrder": "source"
  },

  "experimentalSortPackageJson": {
    "sortScripts": true
  },

  "ignorePatterns": ["dist", "node_modules", "tauri-bindings", "**/*.toml", "**/*.md"]
}
