{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "pedantic": "warn",
    "perf": "warn",
    "suspicious": "warn"
  },
  "ignorePatterns": ["dist", "node_modules", "tauri-bindings", "src/vite-env.d.ts", "*.config.*"],
  "plugins": [
    "oxc",
    "typescript",
    "react",
    "react-perf",
    "import",
    "unicorn",
    "jsx-a11y",
    "promise",
    "vitest"
  ],
  "rules": {
    "import/no-unassigned-import": [
      "error",
      {
        "allow": ["**/*.css"]
      }
    ],
    "max-lines-per-function": "off",
    "react/react-in-jsx-scope": "off",
    "unicorn/prefer-query-selector": "off",
    "no-warning-comments": "off"
  },
  "settings": {
    "react": {
      "version": "19"
    },
    "vitest": {
      "typecheck": true
    }
  }
}
